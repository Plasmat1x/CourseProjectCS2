<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ControlBaseStyle" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="Background" Value="#3f3f3f"/>
    </Style>

    <Style x:Key="PrimaryTextStyle" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="Background" Value="#3f3f3f"/>
    </Style>

    <Style x:Key="SecondaryTextStyle" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="#B2FFFFFF"/>
        <Setter Property="Background" Value="#3f3f3f"/>
    </Style>

    <Style x:Key="DisableTextStyle" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="#88FFFFFF"/>
        <Setter Property="Background" Value="#3f3f3f"/>
    </Style>

    <Style x:Key="InputTextBox" TargetType="{x:Type Control}">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="#FF4f4f4f"/>
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
    </Style>
</ResourceDictionary>