<Window x:Class="Chat.MVVM.Views.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat.MVVM.Views"
        mc:Ignorable="d"
        Title="Chat" Height="800" Width="450">
    <Window.Resources>
        <Style TargetType="{x:Type Window}" BasedOn="{StaticResource ControlBaseStyle}"/>
    </Window.Resources>
    <StackPanel>
        <Menu Style="{DynamicResource DisableTextStyle}">
            <MenuItem Header="File" />
            <MenuItem Header="Settings" />
            <MenuItem Header="About" />
        </Menu>
        <TextBox Style="{DynamicResource SecondaryTextStyle}" IsReadOnly="True" Height="740">
            msg
        </TextBox>
        <TextBox Style="{DynamicResource InputTextBox}"/>
        <Button Style="{DynamicResource PrimaryTextStyle}" Content="Send"/>
    </StackPanel>
</Window>
